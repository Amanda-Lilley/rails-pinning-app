<div class="container row col-md-6 col-md-offset-3">
  <h1>Login</h1>
<%= bootstrap_form_tag url: "/login" do |f| %>

<% if !@errors.nil? %>
  <div id="error_explanation">

    <ul>

      <li><%= @errors %></li>

    </ul>
  </div>
<% end %>


<%= f.email_field :email %>
<%= f.password_field :password %>
<%= f.submit %>

<% end %>

</div>
