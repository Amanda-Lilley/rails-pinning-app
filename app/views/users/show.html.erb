<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<hr/>
<div class="pins">
  <% @user.pins.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |pin| %>
        <div class="pin-container col-md-4">
          <div class="pin">
            <div class="pin-header row">
              <div class="logo-thumbnail col-xs-3">
                <% if "#{pin.category_id}" == "2" %>
                  <%= image_tag('rails-logo-thumbnail.png') %>
                <% elsif "#{pin.category_id}" == "1" %>
                  <%= image_tag('ruby-logo-thumbnail.png') %>
                <% end %>
              </div>
              <div class="pin-title col-xs-9">
              <h4>
                <%= link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
              </h4>
              <%= link_to "#{pin.url}", "#{pin.url}", html_options= {target: "_blank", class: "url"} %>

            </div>
            </div>
            <hr/>
            <p class="text"><%= "#{pin.text}" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', root_path %> |
<%= link_to 'Create A Pin', new_pin_path %> |
<%= link_to 'View Your Pins', user_path(current_user) %>
